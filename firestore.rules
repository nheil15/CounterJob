rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products - allow read and write for migration
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Transactions - structure: transactions/{userEmail}/receipts/{transactionId}
    match /transactions/{userEmail}/receipts/{transactionId} {
      allow read, write: if true;
    }
    
    // Carts - open for now (add auth later)
    match /carts/{cartId} {
      allow read, write: if true;
    }
  }
}
